<!doctype html>
<html lang="en">

	<head>
		<meta charset="utf-8"/>
		<title>Dashboard</title>
		<link rel="stylesheet" href="/assets/css/admin.css" type="text/css" media="screen"/>
	</head>
	<body>

		<header id="header">
			<hgroup>
				<h2 class="section_title" style="padding-left: 15%;">
					<a href="/admin/home">Dashboard</a>
				</h2>
			</hgroup>
		</header>

		<section id="secondary_bar">
			<div class="user">
				{% for sale in sales %}
					<p>Chiffre d'affaire :
						{{ sale / 100 }}
						€
					</p><br>
				{% endfor %}
			</div>
			<div class="ca">
				{% for  sale_of_the_day in sales_of_day %}
					Chiffre d'affaire du
					{{ "now"|date("m/d/Y") }}
					:
					{{ sale_of_the_day / 100}}
					€
				{%  endfor %}
			</div>


		</section>

		<aside id="sidebar" class="column">
			<br>
			<h3>
				<a href="/admin/allorders">Toutes les commandes</a>
			</h3>
			<ul class="toggle"></ul>
			<h3>
				<a href="/admin/showpizza">Pizza</a>
			</h3>
			<ul class="toggle"></ul>
			<h3>
				<a href="/admin/allcategory">Categories</a>
			</h3>
			<ul class="toggle"></ul>
			<h3>
				<a href="/admin/allcustomers">Clients</a>
			</h3>
			<ul class="toggle"></ul>
			<h3>
				<a href="/">Retour a l'acceuil</a>
			</h3>
			<ul class="toggle"></ul>
			<h3>
				<a href="/User/logout">Se déconnecter</a>
			</h3>
			<ul class="toggle"></ul>
		</aside>

		<section id="main" class="column">
			<article class="module width_3_quarter">
				<header>
					{% for item in pizzas %}
						<h3 class="tabs_involved">{{ item.name_pizza }}
							<small style="padding-left:5%">
								<a href="/admin/editpizza/{{ item.id }}" style="padding-left: 2%">Modifier</a>
							</small>
						</p>
					</h3>
				{% endfor %}
			</header>
			<div class="tab_container">
				<div id="tab1" class="tab_content">
					<table class="tablesorter" cellspacing="0">
						<tbody>
							<ul style="list-style:none; font-size: 15px">
								{% for pizza in pizzas %}
									<li>
										<div class="image" style="width: 35%; height:35%" name="image-detail" id="image-detail"><img style="width:100%; height:100%" src="/assets/images/{{ pizza.image }}"></div>
									</li>
									<li>
										<strong>Prix:</strong>
										{{ pizza.price / 100 }}
										€
									</li>
									<li>
										<strong>Description:</strong>
										{{ pizza.description }}</li>
									<li>
										<strong>Catégorie:</strong>
										{{ pizza.name_category }}</li>
									{% if pizza.isActived == true %}
										<li>
											<button type="button" style="background: green" disabled>En ligne</button>
										</li>
									{% elseif pizza.isActived == false %}
										<li>
											<button type="button" style="background: red" disabled>Hors ligne</span>
										</li>
									</td>
								{% endif %}
							{% endfor %}
						</tbody>
					</ul>
				</tbody>
			</table>
		</div>
	</body>
</html></div></article><div class="spacer"></div></body></html></section></body></html>