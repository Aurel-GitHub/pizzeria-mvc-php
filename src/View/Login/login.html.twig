{% block content %}
<section class="section bd-container">
{% block title %}
	{# Connexion au petit Naples | #}
{% endblock %}
	<div>

		<form method="post">
			<div class="container text-center">
			<h1 class="text-center pt-4">Connexion à mon compte</h1>
			{# <small style="visibility:hidden" class="form-text text-muted">Help text for a form field.</small> #}
